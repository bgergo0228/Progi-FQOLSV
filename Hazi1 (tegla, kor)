#include <stdio.h>
#include <math.h>

int main() {
    int teglaa;
    int teglab;
    float kors;
    printf("Egy téglalappal, és egy körrel fogunk dolgozni. \n");
    printf("Add meg a téglalap első oldalának hosszát(pozitív egész számot): ");
    for(int i=0; i<1; i--)
    {
        scanf("%d",&teglaa);
        if(teglaa<1) printf("Mondom pozitívat ");
        if(teglaa>0) 
        {
            i=1;
            break;
        }
    }
    printf("Add meg a téglalap második oldalának hosszát(pozitív egész számot): ");
    for(int j=0; j<1; j--)
    {
        scanf("%d",&teglab);
        if(teglab<1) printf("Mondom pozitívat ");
        if(teglab>0) 
        {
            j=1;
            break;
        }
    }
    
    int teglat = teglaa*teglab;
    int teglak = (teglaa+teglab)*2;
    printf("\n\nA Tégla területe: %dcm² \n",teglat);
    printf("A Tégla kerülete: %dcm \n\n",teglak);
    
    printf("Most add meg a kör sugarát(valós értéket): ");
    for(int k=0; k<1; k--)
    {
        scanf("%f",&kors);
        if(kors<=0) printf("Ezzel az értékkel nem lehet számolni ");
        if(kors>0) 
        {
            k=1;
            break;
        }
    }
    float kort = kors*kors*M_PI;
    float kork = 2*kors*M_PI;
    printf("A Kör területe: %f\n",kort);
    printf("A Kör kerülete: %f\n",kork);
    
    return 0;
}
